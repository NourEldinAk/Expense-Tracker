<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <!-- Custom Bar Layout -->
    <include
        android:id="@+id/customBar"
        layout="@layout/custom_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/custom_bar_content_description"/>

    <!-- Photo ImageView -->
    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="403dp"
        android:layout_height="117dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customBar"
        app:srcCompat="@drawable/bg"
        android:contentDescription="@string/photo_image_content_description"/>

    <!-- Empty State ImageView -->
    <ImageView
        android:id="@+id/empty_img2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:alpha="0.6"
        android:visibility="gone"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoImageView"
        app:srcCompat="@drawable/bag"
        android:contentDescription="@string/empty_view_content_description"/>

    <!-- No Expenses TextView -->
    <TextView
        android:id="@+id/no_expenses2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:alpha="0.6"
        android:text="Weekly Expenses is Empty.."
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empty_img2"
        android:contentDescription="@string/no_expenses_content_description"/>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/weekRecyclerView"
        android:layout_width="405dp"
        android:layout_height="556dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customBar"
        app:layout_constraintVertical_bias="1.0"
        android:contentDescription="@string/week_recyclerview_content_description"/>
</androidx.constraintlayout.widget.ConstraintLayout>
