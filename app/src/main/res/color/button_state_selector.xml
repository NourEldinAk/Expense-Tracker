<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state -->
    <item android:state_enabled="true" android:state_pressed="false" android:state_focused="false" android:color="@android:color/darker_gray" />

    <!-- Pressed state -->
    <item android:state_enabled="true" android:state_pressed="true" android:color="@color/colorAccent" />

    <!-- Focused state -->
    <item android:state_enabled="true" android:state_focused="true" android:color="@color/colorAccent" />

    <!-- Default state -->
    <item android:color="@android:color/darker_gray" />
</selector>
